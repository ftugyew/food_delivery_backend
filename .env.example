# Tindo Backend - Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== SERVER CONFIG =====
PORT=5000
NODE_ENV=development

# ===== DATABASE CONFIG =====
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=tindo
DB_PORT=3306

# For Railway/Production:
# DATABASE_URL=mysql://user:password@host:port/database

# ===== JWT & AUTHENTICATION =====
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRY=7d

# ===== THIRD-PARTY SERVICES =====

# Mappls Geolocation API (Optional)
MAPPLS_CLIENT_ID=your_mappls_client_id
MAPPLS_CLIENT_SECRET=your_mappls_client_secret

# Razorpay Payment Gateway (Optional)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Twilio SMS/OTP (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Email (Optional)
SENDGRID_API_KEY=your_sendgrid_api_key

# Cloudinary CDN (Image Hosting) - REQUIRED
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===== FRONTEND CONFIG =====
FRONTEND_URL=https://your-frontend-domain.com
BACKEND_URL=https://your-backend-domain.com

# ===== FEATURES CONFIG =====

# Order assignment settings
ASSIGN_MAX_KM=10
ASSIGN_LOAD_STATUSES=Pending,Confirmed,Picked

# Delivery fee calculation
DELIVERY_FEE_BASE=30
DELIVERY_FREE_ABOVE=499

# ===== LOGGING =====
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# ===== SESSION CONFIG =====
SESSION_SECRET=your_session_secret_key
SESSION_EXPIRY=24h

# ===== CORS CONFIG =====
ALLOWED_ORIGINS=https://your-frontend.com,http://localhost:3000

# ===== API KEYS =====
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
MAPBOX_TOKEN=your_mapbox_token

# ===== ADMIN CONFIG =====
ADMIN_EMAIL=admin@tindo.com
ADMIN_PHONE=+919876543210
SUPPORT_EMAIL=support@tindo.com
SUPPORT_PHONE=1800-TINDO-1

# ===== DEBUG MODE =====
DEBUG=false
VERBOSE_LOGGING=false
